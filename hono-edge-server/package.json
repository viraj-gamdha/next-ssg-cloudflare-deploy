  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "better-sqlite3": "^11.10.0",
    "drizzle-kit": "^0.31.1",
    "wrangler": "^4.4.0"
